        "runtimeArgs": ["run", "dev"],
        "cwd": "${workspaceFolder}/client",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch API",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "cwd": "${workspaceFolder}/api",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ],
    "compounds": [
      {
        "name": "Launch App",
        "configurations": ["Launch Client", "Launch API"]
      }
    ]
  }
  